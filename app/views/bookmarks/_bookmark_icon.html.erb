<% if is_bookmarked.present? %>
  <%= link_to bookmark_path(is_bookmarked),method: :delete, remote: true , class: "normal-color no-text-decoration bookmark" do %>
    <i class="fas fa-bookmark fa-1.5x bookmarked"></i>
  <% end %>
<% else %>
  <%= link_to post_bookmarks_path(post),method: :post, remote: true , class: "normal-color no-text-decoration bookmark" do %>
    <i class="far fa-bookmark fa-1.5x"></i>
  <% end %>
<% end %>
