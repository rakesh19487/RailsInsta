<div class="col-sm-8 offset-sm-2">
  <div class="form-box">
    <div class="form-top">
      <div class="form-top-left">
        <h3>Edit Profile</h3>
        <%= render "shared/display_message" %>
      </div>
    </div>
    <div class="form-bottom">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "registration-form" }) do |f| %>
        <div class="form-group">
          <%= f.email_field :email, autofocus: true, placeholder: "Email", class: "form-first-name form-control", id: "form-first-name" %>
        </div>
        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
        <% end %>
        <div class="form-group">
          <%= f.text_field :username, autofocus: true, placeholder: "Username", class: "form-first-name form-control", id: "form-user-name" %>
        </div>
        <div class="form-group">
          <%= f.text_area :bio, autofocus: true, placeholder: "Bio", class: "form-first-name form-control", id: "form-user-bio" %>
        </div>
        <div class="form-group">
          <%= f.text_field :website, autofocus: true, placeholder: "Website", class: "form-first-name form-control", id: "form-user-website" %>
        </div>

        <div class="form-group">
          <%= f.password_field :password, autocomplete: "off", placeholder: "Password (leave blank if you don'twant to change it)" ,class: "form-password form-control",id: "form-password"  %>
        </div>
        <div class="form-group">
          <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Password Confirmation" ,class: "form-password form-control",id: "form-password-confirmation"  %>
        </div>
        <%= f.submit "Update", class: "btn btn-primary btn-block" %>
        <br>
      <% end %>
    </div>
  </div>
</div>
