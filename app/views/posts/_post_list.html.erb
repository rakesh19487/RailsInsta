<% if @posts.size > 0 %>
  <% @posts.each do |post|%>
    <div class="d-flex flex-column align-items-center mt-3">
      <div class="col-md-12 col-sm-11 post-card">
        <div class="card">
          <div class="card-header d-flex align-items-center">
            <%= link_to user_path(post.user), class: "no-text-decoration" do %>
              <%= gravatar_for post.user, class: "rounded-circle" %>
            <% end %>
            <%= link_to user_path(post.user), class: "normal-color no-text-decoration ml-2 font-weight-bold" do %>
              <%= post.user.username%>
            <% end %>
            <% if post.is_belongs_to? current_user %>
              <%= link_to post_path(post), method: :delete, class: "ml-auto delete-post-icon mx-0 my-auto" do %>
                <i class="far fa-trash-alt" aria-hidden="true"></i>
              <% end %>
            <% end %>
          </div>
          <% if post.photos.size == 1 %>
            <%= image_tag post.photos.first.image.url(:standard), class: "card-img-top" %>
          <% else %>
            <div id="carousel-post-<%= post.id %>" class="carousel slide" data-ride="carousel">
              <div class="carousel-inner">
                <% post.photos.each_with_index do |photo, index| %>
                  <% if photo == post.photos.first %>
                    <div class="carousel-item active">
                    <% else %>
                      <div class="carousel-item">
                      <% end %>
                      <%= image_tag photo.image.url(:standard), class: "card-img-top" %>
                    </div>
                  <% end %>
                </div>
                <a class="carousel-control-prev" href="#carousel-post-<%= post.id %>" role="button" data-slide="prev">
                  <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                  <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carousel-post-<%= post.id %>" role="button" data-slide="next">
                  <span class="carousel-control-next-icon" aria-hidden="true"></span>
                  <span class="sr-only">Next</span>
                </a>
              </div>
            <% end %>
            <div class="card-body">
              <div class="row actions">
                <a href="#"class="normal-color no-text-decoration ml-2"><i class="far fa-heart fa-1.5x"></i></a>
                <a href="#" class="normal-color no-text-decoration ml-2"><i class="far fa-comment fa-1.5x"></i></a>
                <a href="#" class="normal-color no-text-decoration ml-auto"><i class="far fa-bookmark fa-1.5x"></i></a>
              </div>
              <div class="font-weight-bold"><%= pluralize(16, "like")%></div>
              <div>
                <span class="font-weight-bold"><%= post.user.username %></span>
                <span class="font-weight-light"><%= post.content %></span>
              </div>
              <p class="card-subtitle mb-2 text-muted light-color post-time">
                <%= link_to time_ago_in_words(post.created_at).upcase + " AGO", post_path(post), class: "card-subtitle mb-2 text-muted light-color post-time no-text-decoration"  %>
              </p>
              <hr>
              <div class="row actions">
                <form action="#" class="w-100">
                  <div>
                    <textarea class="form-control comment-input border-0" placeholder="Add a comment..." rows="1"></textarea>
                  </div>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  <% else %>
    <p>You don't have any contents and photos</p>
  <% end %>
